#header {
background-color: lightblue;
}

#main {
background-color: lightblue; 
float: left;
min-height: 800px;
width: 70%;
box-shadow: 1px 1px 10px #000;
display: inline-block;
padding-bottom: 20px;
margin: 10px;
}

#aside {
background-color: grey;
display: inline-block;
width: 23%;
min-height: 400px;
float:right;
margin: 10px;
}

#footer {
bottom: 0;
width: 100%;
height: 75px;
padding-bottom: 16px;
background: lightblue;
z-index:2000;
clear: both;
}

.menu {
background: lightblue;	
float: right;
display: inline;
padding-top: 10px;
padding-right: 10px;
}

.menu2 {
