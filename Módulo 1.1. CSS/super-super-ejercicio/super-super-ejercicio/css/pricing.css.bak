.pricing-plan{
width: 300px;
border-radius: 25px;
box-shadow: 0 0 5px blue;
overflow: hidden;
font-family: Times;
font-size: 16px;
line-height: 1,5;
color: black;
margin: 15px;
}

.pricing-plan__header{
padding: 25px;
background: royalblue;
color: black;
}

.pricing-plan__title{
margin: 0;
text-align: center;
}

.pricing-plan__summary{
margin: 0;
text-align: center;
}

.pricing-plan__title{
font-size:1.5em;
font-weight: 400;
}

.pricing-plan__summary{
font-size: 1em;
font-weight: 300;
}

.pricing-plan__description{
padding: 25px;
}

.pricing-plan__list{
padding: 0;
margin: 0;
}

.pricing-plan__feature {
list-style: none;
margin: 0; 
padding-left: 25px;
position: relative;
font-size: 0.9em;
}

.pricing-plan__feature:not(:last-child) {
margin-bottom: 0.5em;
}

.pricing-plan__feature::before{
content: "\2714";
color: green; 
position: absolute;
left: 0;
}

.pricing-plan__action{
padding: 25px;
border: 1px solid white;
display: flex;
flex-direction: column;
}

.pricing-plan__button{
display: inline-block;
margin-left: 28%;
margin-bottom: 5%;
padding: 8px 20px;
text-decoration: none;
color: blue;
background: white;
border-radius: 5px;
border: 1px solid blue;
text-transform: uppercase;
letter-spacing: 0.02em;
font-weight: bold;
}

.pricing-plan__button:hover{
background: blue;
color: white;
}

.pricing-plan__cost{
margin: 0;
text-align: center;
color: black;
padding: 0;
font-weight: bold;
}

.pricing-plan__text{
font-size: 0.9em;
text-align: center;
margin
}

.float{
float: left;
}

.pricing-plan__container{
display: flex;
align-items: center;
justify-content:center;
padding: 10px;
}
